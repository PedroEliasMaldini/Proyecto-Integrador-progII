<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->

<%- include('./partials/head') %>

<body>
	<% if (user) { %>
	   <%- include('./partials/headerLogueado'); %>
	<% } else { %>
	   <%- include('./partials/header'); %>
	<% } %>

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Agregar productos</h2>
			</div>
			<!-- Show the "ultimos" products -->
			<form action="/producto/add" method="post">
			
				<label>Imagen (Nombre del archivo):</label>
				<input type="text" id="imagen" name="imagen" >
				<br><br>
			
				<label>Nombre del Producto:</label>
				<input type="text" id="nombre_producto" name="nombreProducto" >
				<br><br>
			
				<label>Descripci√≥n:</label>
				<textarea id="descripcion" name="descripcion" ></textarea>
				<br><br>
			
				<label>Precio:</label>
				<input type="number" id="precio" name="precio"  min="0">
				<br><br>
			
				<button type="submit">Agregar Producto</button>
				<input type="hidden" name="usuarioId" value="<%= user.id %>">
			</form>
			
			
			  


	<!-- footer -->
	<%- include('./partials/footer') %>
	<!-- /footer -->
</body>

</html>