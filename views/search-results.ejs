<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->

<%- include('./partials/head') %>

<body>
	<!-- Header -->
	<%- include('./partials/header') %>
		<!-- /Header -->

		<!-- Novedades -->
		<div class="container products-wrapper">
			<div class="row">


				<% if (result.length > 0) { %>
					<div class="col-12">
					  <h2 class="products-title">Resultados de b√∫squeda: <%= qs %></h2>
					</div>
				  <% } else { %>
					<div class="col-12">
						<h2 class="products-title">Sin resultados para "<%= qs %>"</h2>
					  </div>
				  <% } %>
				  




								<% for( let i=0; i < result.length; i++ ) { %>
									<div class="col-12 col-sm-6 col-lg-3">
										<section class="product-box">
											<a href="/detalle/<%= result[i].id %>">
												<!--Aca despues hay que poner bien el detalle-->
												<figure class="product-box_image">
													<img src="/images/products/<%= result[i].imagen %>"
														alt="<%= result[i].imagen %>">
												</figure>
												<article class="product-box_data">
													<h2>
														<%= result[i].nombreProducto %>
													</h2>
													<p>valor: <%= new Intl.NumberFormat('en-US', { style: 'currency' ,
															currency: 'USD' , minimumFractionDigits: 0
															}).format(result[i].precio) %>
													</p>
													</p>

													<p>Usuario: ver el for que no me acuerdo</p>
												</article>
											</a>
										</section>
									</div>
									<% } %>



										<!-- footer -->
										<%- include('./partials/footer') %>
											<!-- /footer -->
</body>

</html>