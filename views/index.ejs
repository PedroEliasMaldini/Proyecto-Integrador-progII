<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->

<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link width="" rel="shortcut icon" href="./images/logo-mercado-liebre.jpg" />

	<title> Mercado Liebre Argentina</title>
	<!-- Font Awesome Stylesheet -->
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/css/all.min.css">
	<!-- Bootstrap Grid Stylesheet -->
	<link rel="stylesheet" href="/css/bootstrap-grid.min.css">
	<!-- Own Stylesheet -->
	<link rel="stylesheet" href="/css/app.css">
</head>

<body>
	<!-- Header -->
	<% if (user) { %>
	   <%- include('./partials/headerLogueado'); %>
	<% } else { %>
	   <%- include('./partials/header'); %>
	<% } %>
		<!-- /Header -->

		<!-- Banner -->
		<div class="banner">
			<img src="/images/img-home-banner.jpg" alt="Banner de ofertas">
		</div>
		<!-- /Banner -->

		<!-- Novedades -->
		<div class="container products-wrapper">
			<div class="row">
				<div class="col-12">
					<h2 class="products-title">Productos</h2>
				</div>
				<!-- Show the "ultimos" products -->
				<% for( let i=0; i < result.length; i++ ) { %>
					<div class="col-12 col-sm-6 col-lg-3">
						<section class="product-box">
							<a href="/detalle/<%= result[i].id %>"> <!--Aca despues hay que poner bien el detalle-->
								<figure class="product-box_image">
									<img src="/images/products/<%= result[i].imagen %>" alt="/images/products/<%= result[i].imagen %>	">
								</figure>
								<article class="product-box_data">
									<h2>
										<%= result[i].nombreProducto %>
									</h2>
									<p>Vendedor: <%= result[i].usuario.username %>
									</p>
									<p>Valor: <%= new Intl.NumberFormat('en-US', { style: 'currency' , currency: 'USD' ,
											minimumFractionDigits: 0 }).format(result[i].precio) %>
									
								</article>
							</a>
						</section>
					</div>
					<% } %>




						<!-- footer -->
						<%- include('./partials/footer') %>
							<!-- /footer -->
</body>

</html>